<html lang="ko">

<head>
    <%- include('../partials/head.ejs')%>

    <title>AVIP Lab - News</title>

    <style>
        @import url("/css/footer.css");
        @import url("/css/header.css");
        
        /* reset */
        a {
            color: inherit;
            text-decoration: none;
        }

        /* common style */
        .wrap {
            width: 60%;
            margin: auto;
            padding-top: 180px;
            padding-bottom: 30px;
            font-family: Arial, sans-serif;
        }
        
        .wrap .box {
            margin-top: 40px;
            font-size: 30px;
        }

        .wrap .content form {
            display: flex;
            flex-direction: column;
        }

        .wrap .content form label {
            margin-top: 20px;
            margin-bottom: 10px;
            font-size: 20px;
        }

        .wrap .content form input, textarea {
            font-size: 17px;
            padding: 5px;
        }

        .wrap .content form button {
            margin-top: 40px;
            width: 20%;
            font-size: 17px;
            padding: 5px;
        }

    </style>
</head>

<body>

    <%- include('../partials/header.ejs')%>
    <div class="wrap">
        <div class="box">
            <h3>Add News</h3>
        </div>

        <div class="content">
            <form action="/news/write" method="POST">
                <label for="title">News Title</label>
                <input type="text" id="title" name="title" placeholder="title" required>
                <label for="date">Date</label>
                <input type="text" id="date" name="date" pattern="(19|20)\d{2}-(0[1-9]|1[0-2])" placeholder="YYYY-MM" required>
                <label for="img">Image</label>
                <input type="file" id="img" name="img" placeholder="img">
                <label for="content">News Content</label>
                <textarea name="content" id="content" cols="30" rows="10" required placeholder="content"></textarea>
                <button>Submit</button>
            </form>
        </div>
    </div>
    <%- include('../partials/footer.ejs')%>

</body>

</html>