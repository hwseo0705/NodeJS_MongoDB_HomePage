<html lang="ko">

<head>
    <%- include('../partials/head.ejs')%>

    <title>AVIP Lab - News</title>

    <style>
        @import url("/css/footer.css");
        @import url("/css/header.css");
        @import url("/css/form-common.css");
        
        .wrap .content form textarea {
            font-size: 17px;
            padding: 5px;
        }
    </style>
</head>

<body>

    <%- include('../partials/header.ejs')%>
    <div class="wrap">
        <div class="box">
            <h3>Modify News</h3>
        </div>

        <div class="content">
            <form action="/news/modify?id=<%= news._id %>&_method=PUT" method="POST">
                <label for="title">News Title</label>
                <input type="text" id="title" name="title" value="<%= news.title %>" placeholder="title" required>
                <label for="date">Date</label>
                <input type="text" id="date" name="date" value="<%= news.date %>" pattern="(19|20)\d{2}-(0[1-9]|1[0-2])" placeholder="YYYY-MM" required>
                <label for="img">Image</label>
                <input type="file" id="img" name="img" value="<%= news.img %>" placeholder="img">
                <label for="content">News Content</label>
                <textarea name="content" id="content" cols="30" rows="10" required placeholder="content"><%= news.content %></textarea>
                <button>Submit</button>
            </form>
        </div>
    </div>
    <%- include('../partials/footer.ejs')%>

</body>

</html>