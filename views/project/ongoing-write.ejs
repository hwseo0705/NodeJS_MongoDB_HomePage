<html lang="ko">

<head>
    <%- include('../partials/head.ejs')%>

    <title>AVIP Lab - Projects</title>

    <style>
        @import url("/css/footer.css");
        @import url("/css/header.css");
        
        /* reset */
        a {
            color: inherit;
            text-decoration: none;
        }

        /* common style */
        .wrap {
            width: 60%;
            margin: auto;
            padding-top: 180px;
            padding-bottom: 30px;
            font-family: Arial, sans-serif;
        }
        
        .wrap .box {
            margin-top: 40px;
            font-size: 30px;
        }

        .wrap .content form {
            display: flex;
            flex-direction: column;
        }

        .wrap .content form label {
            margin-top: 20px;
            margin-bottom: 10px;
            font-size: 20px;
        }

        .wrap .content form input, textarea {
            font-size: 17px;
            padding: 5px;
        }

        .wrap .content form button {
            margin-top: 40px;
            width: 20%;
            font-size: 17px;
            padding: 5px;
        }

    </style>
</head>

<body>

    <%- include('../partials/header.ejs')%>
    <div class="wrap">
        <div class="box">
            <h3>Add Ongoing Projects</h3>
        </div>

        <div class="content">
            <form action="/project/ongoing/write" method="POST">
                <label for="kTitle">Korean Title</label>
                <input type="text" id="kTitle" name="kTitle" placeholder="kTitle" required>
                <label for="eTitle">English Title</label>
                <input type="text" id="eTitle" name="eTitle" placeholder="eTitle" required>
                <label for="position">Position</label>
                <input type="text" id="position" name="position" placeholder="position" required>
                <label for="institution">Institution</label>
                <input type="text" id="institution" name="institution" placeholder="institution" required>       
                <label for="date">Date</label>
                <input type="text" id="date" name="date" pattern="^\d{4}\.\d{2}.\d{2} - \d{4}\.\d{2}.\d{2}" placeholder="YYYY.MM.DD - YYYY.MM.DD" required>       
                <label for="budget">Budget</label>
                <input type="text" id="budget" name="budget" placeholder="budget" required>       
                <label for="img">Image</label>
                <input type="file" id="img" name="img" placeholder="img" required>    
                <button>Submit</button>
            </form>
        </div>
    </div>
    <%- include('../partials/footer.ejs')%>

</body>

</html>