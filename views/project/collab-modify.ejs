<html lang="ko">

<head>
    <%- include('../partials/head.ejs')%>

    <title>AVIP Lab - Projects</title>

    <style>
        @import url("/css/footer.css");
        @import url("/css/header.css");
        
        /* reset */
        a {
            color: inherit;
            text-decoration: none;
        }

        /* common style */
        .wrap {
            width: 60%;
            margin: auto;
            padding-top: 180px;
            padding-bottom: 30px;
            font-family: Arial, sans-serif;
        }
        
        .wrap .box {
            margin-top: 40px;
            font-size: 30px;
        }

        .wrap .content form {
            display: flex;
            flex-direction: column;
        }

        .wrap .content form label {
            margin-top: 20px;
            margin-bottom: 10px;
            font-size: 20px;
        }

        .wrap .content form input, textarea {
            font-size: 17px;
            padding: 5px;
        }

        .wrap .content form button {
            margin-top: 40px;
            width: 20%;
            font-size: 17px;
            padding: 5px;
        }

    </style>
</head>

<body>

    <%- include('../partials/header.ejs')%>
    <div class="wrap">
        <div class="box">
            <h3>Modify Collaborators</h3>
        </div>

        <div class="content">
            <form action="/project/collab/modify?id=<%= result._id %>&_method=PUT" method="POST">
                <label for="institution">Institution</label>
                <input type="text" id="institution" name="institution" value="<%= result.institution %>" placeholder="institution" required>       
                <label for="name">Name</label>
                <input type="text" id="name" name="name" value="<%= result.name %>" placeholder="name" required>  
                <button>Submit</button>
            </form>
        </div>
    </div>
    <%- include('../partials/footer.ejs')%>

</body>

</html>