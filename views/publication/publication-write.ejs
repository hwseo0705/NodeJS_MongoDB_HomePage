<html lang="ko">

<head>
    <%- include('../partials/head.ejs')%>

    <title>AVIP Lab - Publications</title>

    <style>
        @import url("/css/footer.css");
        @import url("/css/header.css");
        
        /* reset */
        a {
            color: inherit;
            text-decoration: none;
        }

        /* common style */
        .wrap {
            width: 60%;
            margin: auto;
            padding-top: 180px;
            padding-bottom: 30px;
            font-family: Arial, sans-serif;
        }
        
        .wrap .box {
            margin-top: 40px;
            font-size: 30px;
        }

        .wrap .content form {
            display: flex;
            flex-direction: column;
        }

        .wrap .content form label {
            margin-top: 20px;
            margin-bottom: 10px;
            font-size: 20px;
        }

        .wrap .content form input, textarea {
            font-size: 17px;
            padding: 5px;
        }

        .wrap .content form button {
            margin-top: 40px;
            width: 20%;
            font-size: 17px;
            padding: 5px;
        }

    </style>
</head>

<body>

    <%- include('../partials/header.ejs')%>
    <div class="wrap">
        <div class="box">
            <h3>Add Publication</h3>
        </div>

        <div class="content">
            <form action="/publication/write?status=<%= request %>" method="POST">
                <label for="title">Title</label>
                <input type="text" id="title" name="title" placeholder="title" required>
                <label for="author">Author</label>
                <input type="text" id="author" name="author" placeholder="author" required>
                <% if (request == 'publication') { %>
                    <label for="date">Date (YYYY)</label>
                    <input type="text" id="date" pattern="^\d{4}$" name="date" placeholder="YYYY" required>
                    <label for="status" hidden>Issued</label>
                    <input type="text" id="status" name="status" value="<%= request %>" hidden>
                    <label for="publisher">Publisher</label>
                    <input type="text" id="publisher" name="publisher" placeholder="in-prep, submitted, or publisher" required>
                <% } else if (request == 'patent') { %>
                    <label for="issued">Issued</label>
                    <input type="text" id="issued" name="issued" placeholder="issued-by (date)" required>
                <% } %>
        
                <button>Submit</button>
            </form>
        </div>
    </div>
    <%- include('../partials/footer.ejs')%>

</body>

</html>