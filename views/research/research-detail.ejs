<html lang="ko">

<head>
     
    <%- include('../partials/head.ejs')%>

    <title>AVIP Lab - Research</title>

    <!-- custom css -->
    <link rel="stylesheet" href="/css/research-detail.css">

</head>

<body>

    <%- include('../partials/header.ejs')%>

    <div class="wrap">

        <div class="left">
            <div class="box">
                <h3>Research</h3>
            </div>
            <ul>
                <li><a href="/research">Research</a></li>
                <li><a href="/project">Project</a></li>
            </ul>
        </div>
        <div class="right">
            <div class="top">
                <h3 class="title"><%= result.title %></h3>
            </div>
            <div class="bottom">
                <img src="/img/<%= result.research_img %>" alt="리서치 이미지">
            </div>
            <div class="button">
                <% if (isAdmin == 'admin') { %>
                    <button type="button" class="btn"><a href="/research/modify?id=<%= result._id %>">수정</a></button>
                    <button type="button" id="<%= result._id %>" onclick="confirmDelete(id)" class="btn"><a href="#">삭제</a></button>
                <% } %>
                <button type="button" class="btn"><a href="/research">목록</a></button>
            </div>
        </div>
    </div>

    <%- include('../partials/footer.ejs')%>

</body>

<script>   
    function confirmDelete(id) {
        if (confirm("Are you sure you want to delete?")) {
            if (confirm) {
                location.href="/research/delete?id=" + id;
            }
        }
    }
</script>

</html>