<html lang="ko">

<head>
    <%- include('../partials/head.ejs')%>

    <title>AVIP Lab - News</title>

    <style>
        @import url("/css/footer.css");
        @import url("/css/header.css");
        
        /* reset */
        a {
            color: inherit;
            text-decoration: none;
        }

        /* common style */
        .wrap {
            width: 60%;
            margin: auto;
            padding-top: 180px;
            padding-bottom: 30px;
            font-family: Arial, sans-serif;
        }
        
        .wrap .box {
            margin-top: 40px;
            font-size: 30px;
        }

        .wrap .content form {
            display: flex;
            flex-direction: column;
        }

        .wrap .content form label {
            margin-top: 20px;
            margin-bottom: 10px;
            font-size: 20px;
        }

        .wrap .content form input, textarea {
            font-size: 17px;
            padding: 5px;
        }

        .wrap .content form button {
            margin-top: 40px;
            width: 20%;
            font-size: 17px;
            padding: 5px;
        }

    </style>
</head>

<body>

    <%- include('../partials/header.ejs')%>
    <div class="wrap">
        <div class="box">
            <h3>Add Research</h3>
        </div>

        <div class="content">
            <form action="/research/write" method="POST">
                <label for="title">Research Title</label>
                <input type="text" id="title" name="title" placeholder="title" required>
                <label for="description">Description</label>
                <input type="text" id="description" name="description" placeholder="description" required>
                <label for="intro_img">Intro Image</label>
                <input type="file" id="intro_img" name="intro_img" placeholder="intro_img" required>
                <label for="research_img">Research Image</label>
                <input type="file" id="research_img" name="research_img" placeholder="research_img" required>
                <button>Submit</button>
            </form>
        </div>
    </div>
    <%- include('../partials/footer.ejs')%>

</body>

</html>