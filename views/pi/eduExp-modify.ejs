<html lang="ko">

<head>
    <%- include('../partials/head.ejs')%>

    <title>AVIP Lab - PI</title>

    <style>
        @import url("/css/footer.css");
        @import url("/css/header.css");
        @import url("/css/form-common.css");
    </style>
</head>

<body>

    <%- include('../partials/header.ejs')%>
    <div class="wrap">
        <div class="box">
            <h3>Modify Education & Experience</h3>
        </div>

        <div class="content">
            <form action="/pi/eduExp/modify?id=<%= result._id %>&_method=PUT" method="POST">
                <label for="title">Title</label>
                <input type="text" id="title" name="title" value="<%= result.title %>" placeholder="title" required>
                <label for="info">Info</label>
                <input type="text" id="info" name="info" value="<%= result.info %>" placeholder="info" required>
                <label for="date">Date</label>
                <input type="text" id="date" name="date" value="<%= result.date %>" pattern="^\d{4}\.\d{2} - .*" placeholder="YYYY.MM -" required>       
                <button>Submit</button>
            </form>
        </div>
    </div>
    <%- include('../partials/footer.ejs')%>

</body>

</html>