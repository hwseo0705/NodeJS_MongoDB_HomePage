<html lang="ko">

<head>
    <%- include('../partials/head.ejs')%>

    <title>AVIP Lab - Members</title>

    <style>
        @import url("/css/footer.css");
        @import url("/css/header.css");
        
        /* reset */
        a {
            color: inherit;
            text-decoration: none;
        }

        /* common style */
        .wrap {
            width: 60%;
            margin: auto;
            padding-top: 180px;
            padding-bottom: 30px;
            font-family: Arial, sans-serif;
        }
        
        .wrap .box {
            margin-top: 40px;
            font-size: 30px;
        }

        .wrap .content form {
            display: flex;
            flex-direction: column;
        }

        .wrap .content form label {
            margin-top: 20px;
            margin-bottom: 10px;
            font-size: 20px;
        }

        .wrap .content form input, textarea {
            font-size: 17px;
            padding: 5px;
        }

        .wrap .content form button {
            margin-top: 40px;
            width: 20%;
            font-size: 17px;
            padding: 5px;
        }

    </style>
</head>

<body>

    <%- include('../partials/header.ejs')%>
    <div class="wrap">
        <div class="box">
            <h3>Add Members</h3>
        </div>

        <div class="content">
            <form action="/member/write?status=<%= request %>" method="POST">
                <label for="name">Name</label>
                <input type="text" id="name" name="name" placeholder="name" required>
                <label for="email">Email</label>
                <input type="text" id="email" name="email" placeholder="email" required>
                <% if (request == 'grad' || request == 'under') { %>
                    <label for="status" hidden>Status</label>
                    <input type="text" id="status" name="status" value="<%= request %>" hidden>
                    <label for="date">Date</label>
                    <input type="text" id="date" name="date" pattern="^\d{4}\.\d{2}" placeholder="YYYY.MM" required>
                <% } else if (request == 'alumni') { %>
                    <label for="info">소속</label>
                    <input type="text" id="info" name="info" placeholder="info" required>
                <% } %>
                <button>Submit</button>
            </form>
        </div>
    </div>
    <%- include('../partials/footer.ejs')%>

</body>

</html>